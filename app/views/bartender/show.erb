                </ul>
            </div>
            
            <div class="px-4 py-3">
                <h5 class="mb-0">About</h5>
                <div class="p-4 rounded shadow-sm bg-light">
                    <p class="card-text"><%=@user.about%></p>
                </div>
            </div>
            
            <div class="py-4 px-4">
               
                <div class="d-flex align-items-center justify-content-between mb-3">
                    <h5 class="mb-0">My Recipes</h5><a href="/recipes/new" class="btn btn-link text-muted">Create A New Recipe</a><a href="/recipes" class="btn btn-link text-muted">Show all Recipes</a>
                </div>
                
                
                  
<div class="col d-flex justify-content-center">
