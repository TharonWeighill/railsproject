<blockquote class="blockquote text-center">  

<div class="row">
    <div class="form-container">
        <form action="/recipes/<%=@recipe.id%>" method="POST">
            <input type="hidden" value= "PATCH" name="_method">
		        <div class="col-md-5 mx-auto">
		            <div id="first">
				        <div class="myform form ">
					        <div class="logo mb-3">
						        <div class="col-md-12 text-center">
						        </div>
					        </div>
                        </div>
			       
                        <div class="logo mb-3">
                            <div class="col-md-12 text-center">
                            <h1 >Edit Your Recipe</h1>
                        </div>
                        <div class="form-gorup">
                            <label for="recipe_name">Recipe Name</label>
                             <input type="string" name="recipe[recipe_name]" class="form-control" required>
                        </div>
                        <div class="form-gorup">
                            <label for="cuisine">Cuisine</label>
                             <input type="string" name="recipe[cuisine]" class="form-control" required>
                        </div>
                        
                        <div class="form-gorup">
                            <label for="difficulty">Difficulty 1-10</label>
                             <input type="string" name="recipe[difficulty]" class="form-control" required>
                        </div>
                        <div class="form-gorup">
                            <label for="Directions">Cooking Instructions</label>
                             <input type="text" name="recipe[directions]" class="form-control" required>
                        </div>
                            
                     
                        <div>
                            <label for="value">Ingredients</label>  
                        </div> 
                        
                        <%8.times do |num|%>
                            <div class="ingredident_form_<%=num + 1%>">
                                <label for="ingredient">Ingredient</label>
                                <input type="text" name="ingredients[][ingredient]" <%="required" if num >= 0 && num < 3 %>>
                                <label for="value">Measurement</label>
                                <input type="text" name="ingredients[][value]"  <%="required" if num >= 0 && num < 3 %>>
                            </div>
                        <%end%>
                      
                        <div class="col-md-12 text-center mb-3">
                            <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Submit Changes</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
</blockquote>                   


