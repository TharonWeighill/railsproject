<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <a href="/users/<%=current_user.id%>" class="btn btn-outline-primary">My Profile</a>
  <a href="/recipes" class="btn btn-outline-primary">All Recipes</a>
  <a href="/logout" class="btn btn-outline-primary">Logout</a>

<div  class="col d-flex justify-content-center">
  <span class="border border-primary">
    <div class="card" style="width: 30em;">
      <h1 class="card-center"><%= @recipe.recipe_name%></h1>
      <img src="https://fermentedconnections.com/wp-content/uploads/2018/07/food.png" class="card-img-top" alt="...">
      <div class="card-body">
        <table style="width: 100%">
          <tr>
            <th>Ingredient</th>
            <th>Measurement</th>
          </tr> 
          <%@recipe.ingredients.each do |r|%>
          <tr>
            <td><%=r.ingredient%></td>
            <td><%=r.value%></td>
          </tr>
          <%end%>
        </table>
        <h5>Cooking Instructions</h5>
        <br>
        <p class="card-text"><%=@recipe.directions%></p>
        <br>
        <h5>Difficulty</h5>
        <p class="card-text"><%=@recipe.difficulty%></p>
        <a  class=" btn btn-block mybtn btn-primary tx-tfm" href="<%=@recipe.id%>/edit">Edit Recipe</a>
      </div>
    </div>
  </span>
</div>


<blockquote class="blockquote text-center">  
<h1>Leave a comment</h1>
<form action="/comments" method="post">
    <input type="text" name="textbody">
    <input type="hidden" name="recipe_id" value="<%=@recipe.id%>">
    <input type="submit" value="Comment">
  <%if @comments.size > 0 %> 
    <% @comments.each do |c| %> 
      <div class="container d-flex justify-content-center mt-100 mb-100">
        <div class="row">
          <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                  <h6 class="card-subtitle">Comments by Users</h6>
                </div>
                <div class="comment-widgets m-b-20">
                    <div class="d-flex flex-row comment-row">
                      <div class="p-2"><span class="round"><img src="https://picsum.photos/200/300" alt="user" width="50"></span></div>
                        <div class="comment-text w-100">
                          <div class="comment-footer"> <span class="date"><%=Time.now.utc%><span class="label label-info"></span> <span class="action-icons"> <a href="#" data-abc="true"><i class="fa fa-pencil"></i></a> <a href="#" data-abc="true"><i class="fa fa-rotate-right"></i></a> <a href="#" data-abc="true"><i class="fa fa-heart"></i></a> </span> </div>
                            <p class="m-b-5 m-t-10"><%=c.textbody%></p>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  <%end%>
</form>
</blockquote>
    

